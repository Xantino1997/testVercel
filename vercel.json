{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/index.html",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/mensaje-backend",
        "dest": "/api/index.js"
      },
      {
        "src": "/",
        "dest": "/public/index.html"
      }
    ]
  }
  